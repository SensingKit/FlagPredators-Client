<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="uk.ac.qmul.flagpredators.StartActivity"
    android:background="@drawable/background_black">

    <TextView android:text="@string/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/descriptionTextView"
        android:textColor="@drawable/text_white"/>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_create_a_new_game"
        android:id="@+id/createAGameButton"
        android:layout_gravity="center_horizontal"
        android:onClick="createAGameOnClick"
        android:textColor="@drawable/text_green_selector"
        android:background="@drawable/button_green_stroke_selector"/>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_join_a_game"
        android:id="@+id/joinAGameButton"
        android:layout_gravity="center_horizontal"
        android:onClick="joinAGameOnClick"
        android:textColor="@drawable/text_green_selector"
        android:background="@drawable/button_green_stroke_selector" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latitudeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_latitude"
            android:id="@+id/latitudeText"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/text_white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_none"
            android:id="@+id/latitudeTextView"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/text_white" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_longitude"
            android:id="@+id/longitudeText"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/text_white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_none"
            android:id="@+id/longitudeTextView"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/text_white" />
    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_unbind_sensingservice"
        android:id="@+id/unbindButton"
        android:layout_gravity="center_horizontal"
        android:onClick="unbindOnClick"
        android:textColor="@drawable/text_green_selector"
        android:background="@drawable/button_green_stroke_selector" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:id="@+id/backButton"
        android:layout_gravity="center_horizontal"
        android:onClick="goBackToMainOnClick"
        android:textColor="@drawable/text_red_selector"
        android:background="@drawable/button_red_stroke_selector"/>

</LinearLayout>
