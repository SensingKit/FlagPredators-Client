<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.ac.qmul.flagpredators.AboutActivity"
    android:orientation="vertical"
    android:background="@drawable/background_black"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_haptic_pattern"
        android:id="@+id/hapticTextView"
        android:textColor="@drawable/text_white"
        android:textSize="20sp" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="@string/button_pattern_get_flag"
        android:id="@+id/getFlagPatternButton"
        android:onClick="getFlagPatternOnClick"
        android:background="@drawable/button_pink_stroke_selector"
        android:textColor="@drawable/text_pink_selector" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="@string/button_pattern_get_base"
        android:id="@+id/getBasePatternButton"
        android:onClick="getBasePatternOnClick"
        android:background="@drawable/button_blue_stroke_selector"
        android:textColor="@drawable/text_blue_selector" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="@string/button_pattern_out_of_boundary"
        android:id="@+id/outOfBoundaryPatternButton"
        android:onClick="outPatternOnClick"
        android:background="@drawable/button_red_stroke_selector"
        android:textColor="@drawable/text_red_selector" />

    <Button
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:text="@string/button_pattern_get_caught"
        android:id="@+id/getCaughtPatternButton"
        android:onClick="getCaughtPatternOnClick"
        android:background="@drawable/button_green_stroke_selector"
        android:textColor="@drawable/text_green_selector" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:id="@+id/backButton"
        android:layout_gravity="center_horizontal"
        android:onClick="goBackToMainOnClick"
        android:textColor="@drawable/text_red_selector"
        android:background="@drawable/button_red_stroke_selector"/>

</LinearLayout>
