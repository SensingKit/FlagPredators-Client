<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="3dip"
                android:color="#aa0095ff"
                />
            <corners android:radius="8dip"/>
            <padding
                android:left="15dip"
                android:right="15dip"
                />
        </shape>
    </item>

    <item
        android:state_pressed="false"
        android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="3dip"
                android:color="#ff0095ff"
                />
            <corners android:radius="8dip"/>
            <padding
                android:left="15dip"
                android:right="15dip"
                />
        </shape>
    </item>

    <item
        android:state_pressed="false"
        android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="3dip"
                android:color="#590095ff"
                />
            <corners android:radius="8dip"/>
            <padding
                android:left="15dip"
                android:right="15dip"
                />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="3dip"
                android:color="#590095ff"
                />
            <corners android:radius="8dip"/>
            <padding
                android:left="15dip"
                android:right="15dip"
                />
        </shape>
    </item>
</selector>