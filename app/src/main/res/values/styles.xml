    <style name="pink_button_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/team_red</item>

    </style>
    <style name="blue_button_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/team_blue</item>

    </style>
    <style name="red_button_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/button_cancel_red</item>

    </style>
    <style name="green_button_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/button_start_green</item>

