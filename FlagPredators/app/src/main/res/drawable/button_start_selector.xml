<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <shape>
            <padding
                android:left="15dip"
                android:right="15dip"/>
            <solid
                android:color="#3faccb12"/>
        </shape>
    </item>

    <item
        android:state_pressed="false"
        android:state_enabled="true">
        <shape>
            <padding
                android:left="15dip"
                android:right="15dip"/>
            <solid
                android:color="#64accb12"/>
        </shape>
    </item>

    <item
        android:state_pressed="false"
        android:state_enabled="false">
        <shape>
            <padding
                android:left="15dip"
                android:right="15dip"/>
            <solid
                android:color="#2faccb12"/>
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:state_enabled="false">
        <shape>
            <padding
                android:left="15dip"
                android:right="15dip"/>
            <solid
                android:color="#2faccb12"/>
        </shape>
    </item>
</selector>